@page "/Account/Login"
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="row mt-2 align-content-center justify-content-center">
    <div class="col-md-4">
        <div class="text-center">
            <h1>@ViewData["Title"].ToString().ToUpper()</h1>
        </div>
        <section>
            <form id="account" method="post">
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating border-bottom mt-2">
                    <input asp-for="Input.Email" class="form-control border-1 border-black" id="floatingInput" placeholder="Email" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" for="floatingInput">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control border-1 border-black mt-2" id="floatingInput" placeholder="Password" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" for="floatingInput">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input border-black mt-2" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                </div>
                <div class="mt-2">
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" >Register as a new user</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
