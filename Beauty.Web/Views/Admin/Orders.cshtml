@using Beauty.Shared.Models;
@model IEnumerable<Order>

<h1 class="text-primary py-3">Manage Order's</h1>
<form method="post">
    <div class="container row bg-white p-2 mb-3 rounded">
        @foreach (var item in Model)
        {
            <div class="col-12 pb-3 pt-3 mt-4 border rounded">
                <div class="row">
                    <div class="col-4">
                        Order Number: @item.OrderId
                        <br />
                        Customer Name: @item.Name
                        <ul class="text-info">
                            @foreach (var details in item.Lines)
                            {
                                <li>@details.Product.Name x @details.Count</li>
                                <p>zuzuu</p>
                            }
                        </ul>
                    </div>
                    <div class="col-4 pb-2">
                        <div class="input-group pb-2">
                            <div class="input-group-append">
                                <span class="input-group-text bg-secondary border">Time</span>
                            </div>
                            <input type="datetime" value="@item.PickUpDate" class="form-control" readonly />
                        </div>
                        <textarea asp-for="@item.Comments" readonly class="rounded border form-control" rows="3"></textarea>
                    </div>
                    <div class="col-3 offset-1 d-flex align-content-center">
                        <div class="col-12">

                            @if (item.Status == StatusData.StatusInProcess)
                            {

                                <button type="submit" class="btn btn-primary form-control mb-3"
                                asp-page-handler="OrderInProcess" asp-route-id="@item.OrderId">
                                    <i class="bi bi-check-square"></i> &nbsp; Ready To Ship
                                </button>
                            }
                            @if (item.Status == StatusData.StatusReady)
                            {
                                <button type="submit" class="btn btn-success form-control mb-3"
                                asp-page-handler="OrderReady" asp-route-id="@item.OrderId">
                                    <i class="bi bi-emoji-laughing"></i> &nbsp; Completed
                                </button>
                            }

                            <button type="submit" class="btn btn-warning form-control mb-3"
                                asp-page-handler="OrderCancel" asp-route-id="@item.OrderId">
                                <i class="bi bi-x-square"></i> &nbsp; Cancel Order
                            </button>


                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</form>