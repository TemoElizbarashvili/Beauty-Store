@using Beauty.Shared.Models;
@model IEnumerable<Product>

<div class="container">
    <div class="table-title">
        <div class="row">
            <div class="col-sm-6 mt-2">
                <h2>Manage <b>Products</b></h2>
            </div>
            <div class="col-sm-6 mt-2 text-end">
                <a asp-controller="Admin" asp-action="Upsert" class="btn btn-success" data-toggle="modal">
                    <i class="fa-solid fa-circle-plus"></i>
                    <span>Add New Product</span>
                </a>
            </div>
        </div>
    </div>
    <table class="table table-striped table-hover">
        <thead>
            <tr class="table-dark">
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="table-active">
                    <td>@item.ProductId</td>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.Price.ToString("C")</td>
                    <td>
                        <a asp-area="" asp-controller="Admin" asp-action="Upsert" asp-route-productId="@item.ProductId" style="text-decoration:none;width:20px;height:20px" data-toggle="modal">
                            <i class="fa-regular fa-pen-to-square m-1"></i>
                        </a>

                        <a asp-area="" asp-controller="Admin" asp-action="Delete" asp-route-productId="@item.ProductId" style="width:20px;height:20px" data-toggle="modal">
                            <i class="fa-solid fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>